{
  "name": "top-ai-ideas-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:smoke": "vitest run tests/smoke",
    "test:api": "vitest run tests/api",
    "test:ai": "vitest run tests/ai/*-sync.test.ts && vitest run tests/ai/*-async.test.ts",
    "test:queue": "vitest run tests/queue",
    "test:unit": "vitest run tests/unit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/db-migrate.ts",
    "db:push": "drizzle-kit push",
    "db:init": "tsx src/scripts/db-init.ts",
    "db:status": "tsx src/scripts/db-status.ts",
    "db:backup": "tsx src/scripts/db-backup.ts",
    "db:restore": "tsx src/scripts/db-restore.ts",
    "db:seed": "tsx src/scripts/db-seed.ts",
    "db:reset": "tsx src/scripts/db-reset.ts",
    "queue:clear": "tsx src/scripts/queue-clear.ts",
    "queue:status": "tsx src/scripts/queue-status.ts",
    "queue:reset": "tsx src/scripts/queue-reset.ts",
    "openapi:json": "tsx src/openapi/export.ts",
    "openapi:html": "tsx src/openapi/html.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.10.3",
    "@hono/zod-validator": "^0.1.11",
    "better-sqlite3": "12.4.1",
    "better-queue": "^3.8.12",
    "knex": "^3.1.0",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.3.7",
    "node-fetch": "^3.3.2",
    "openai": "^6.1.0",
    "pino": "^9.1.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}
