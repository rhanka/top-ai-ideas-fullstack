  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && npm run build:ext && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
